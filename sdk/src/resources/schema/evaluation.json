{
  "type": "object",
  "properties": {
    "hypercert": {
      "type": "object",
      "properties": {
        "chainID": {
          "type": "string"
        },
        "contract": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$"
        },
        "claimID": {
          "type": "string"
        }
      },
      "required": ["chainID", "contract", "claimID"]
    },
    "evaluation": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["EAS", "IPFS"]
        },
        "oneOf": [
          {
            "properties": {
              "type": {
                "const": "EAS"
              },
              "uid": {
                "type": "string"
              },
              "contract": {
                "type": "string",
                "pattern": "^0x[0-9a-fA-F]{40}$"
              }
            },
            "required": ["type", "uid", "contract"]
          },
          {
            "properties": {
              "type": {
                "const": "IPFS"
              },
              "cid": {
                "type": "string"
              }
            },
            "required": ["type", "cid"]
          }
        ]
      },
      "required": ["type", "chainID", "contract", "uid"]
    },
    "hypercertRegion": {
      "type": "object",
      "properties": {
        "impactScope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "impact_timeframe": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "workScope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "work_timeframe": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["hypercert", "evaluation", "hypercertRegion"]
}
