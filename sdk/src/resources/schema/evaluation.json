{
  "type": "object",
  "properties": {
    "hypercert": {
      "type": "object",
      "properties": {
        "chainId": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{1,}$"
        },
        "contract": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$"
        },
        "claimId": {
          "type": "string",
          "pattern": "^\\d+$"
        }
      },
      "required": ["chainId", "contract", "claimId"]
    },
    "evaluation": {
      "oneOf": [
        {
          "$ref": "#/definitions/easEvaluation"
        },
        {
          "$ref": "#/definitions/ipfsEvaluation"
        }
      ]
    },
    "hypercertRegion": {
      "type": "object",
      "properties": {
        "impactScope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "impact_timeframe": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "workScope": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "work_timeframe": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2,
          "maxItems": 2
        },
        "contributors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["hypercert", "evaluation", "hypercertRegion"],
  "definitions": {
    "easEvaluation": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "EAS"
        },
        "chainId": {
          "type": "string"
        },
        "contract": {
          "type": "string",
          "pattern": "^0x[0-9a-fA-F]{40}$"
        },
        "uid": {
          "type": "string",
          "pattern": "^\\d+$"
        }
      },
      "required": ["type", "chainId", "contract", "uid"]
    },
    "ipfsEvaluation": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "const": "IPFS"
        },
        "cid": {
          "type": "string"
        }
      },
      "required": ["type", "cid"]
    }
  }
}
