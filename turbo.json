{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".docusaurus",
        ".cache-loader",
        "out/**",
        ".next/**"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "lint", "test"]
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "cache": false,
      "dependsOn": ["lint"]
    },
    "contracts#build": {
      "inputs": ["./src"],
      "dependsOn": ["^build"],
      "outputs": ["./typechain", "./abi", "./dist"]
    },
    "frontend#build": {
      "dependsOn": ["sdk#build"]
    },
    "sdk#build": {
      "inputs": ["./src", "./.graphclient", "./test"],
      "dependsOn": ["contracts#build"]
    }
  }
}
