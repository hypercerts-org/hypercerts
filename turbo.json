{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**.env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "build/**",
        ".docusaurus",
        ".cache-loader",
        "out/**",
        ".next/**"
      ]
    },
    "deploy": {
      "dependsOn": ["build", "lint", "test"]
    },
    "dev": {},
    "lint": {},
    "test": {},
    "contracts#build": {
      "inputs": ["./src/**/*.sol", "./src/**/*.ts", "./src/**/*.t.sol"],
      "outputs": ["./typechain", "./abi", "./dist"],
      "dependsOn": ["build:hardhat"]
    },
    "frontend#build": {
      "dependsOn": ["sdk#build"]
    },
    "sdk#build": {
      "dependsOn": ["contracts#build"],
      "inputs": [
        "./src/**/*.ts",
        "./src/**/*.graphql",
        "./src/**/*.json",
        "./.graphclient/**/*.ts",
        "./.graphclient/**/*.graphql",
        "./test/**/*.ts"
      ],
      "outputs": ["./dist"]
    }
  }
}
